{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["esnext"],
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "./src",
    "strict": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["**/*.ts"]
}
